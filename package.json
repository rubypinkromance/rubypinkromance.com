{
  "name": "rubypinkromance.com",
  "version": "2.0.0",
  "description": "",
  "author": "Ruby Pink",
  "license": "UNLICENSED",
  "scripts": {
    "start": "yarn watch",
    "build": "run-p build:*",
    "build:content": "eleventy",
    "build:css": "sass src:dist",
    "watch": "run-p watch:*",
    "watch:content": "eleventy --serve --quiet",
    "watch:css": "sass --watch src:dist",
    "lint": "run-s lint:js lint:css lint:prettier",
    "lint:check": "run-s lint:*:check",
    "lint:js": "eslint . --fix",
    "lint:js:check": "eslint .",
    "lint:css": "stylelint --fix '**/*.scss'",
    "lint:css:check": "stylelint '**/*.scss'",
    "lint:prettier": "prettier . --write",
    "lint:prettier:check": "prettier . --check"
  },
  "devDependencies": {
    "@11ty/eleventy": "2.0.1",
    "@11ty/eleventy-img": "3.1.8",
    "@11ty/eleventy-navigation": "0.3.5",
    "@11ty/eleventy-plugin-rss": "1.2.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "luxon": "3.4.4",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.4",
    "sass": "1.70.0",
    "stylelint": "16.2.0",
    "stylelint-config-spaceninja": "15.0.0"
  }
}
