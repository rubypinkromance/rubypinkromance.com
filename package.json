{
  "name": "rubypinkromance.com",
  "version": "2.0.0",
  "description": "",
  "author": "Ruby Pink",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "start": "yarn watch",
    "build": "run-p build:*",
    "build:content": "eleventy",
    "build:css": "sass src:dist",
    "watch": "run-p watch:*",
    "watch:content": "eleventy --serve --quiet",
    "watch:css": "sass --watch src:dist",
    "lint": "run-s lint:js lint:css lint:prettier lint:webc",
    "lint:check": "run-s lint:*:check",
    "lint:js": "eslint . --fix",
    "lint:js:check": "eslint .",
    "lint:css": "stylelint --fix '**/*.scss'",
    "lint:css:check": "stylelint '**/*.scss'",
    "lint:prettier": "prettier . --write",
    "lint:prettier:check": "prettier . --check",
    "lint:webc": "prettier '**/*.webc' --write",
    "lint:webc:check": "prettier '**/*.webc' --check"
  },
  "devDependencies": {
    "@11ty/eleventy": "3.1.2",
    "@11ty/eleventy-img": "6.0.4",
    "@11ty/eleventy-navigation": "1.0.5",
    "@11ty/eleventy-plugin-rss": "2.0.4",
    "@11ty/eleventy-plugin-webc": "0.11.2",
    "@rknightuk/eleventy-plugin-post-graph": "1.0.8",
    "@spaceninja/writing-progress": "1.1.0",
    "eleventy-plugin-wordcount": "1.0.5",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "luxon": "3.7.2",
    "npm-run-all2": "8.0.4",
    "prettier": "3.7.4",
    "sass": "1.96.0",
    "stylelint": "16.26.1",
    "stylelint-config-spaceninja": "15.0.0"
  }
}
